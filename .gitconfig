[user]
        name = bprivat
        email = ben.privat1@gmail.com
[alias]
    st = status -sb
    g = log --oneline --topo-order --graph --decorate
    gall = log --all --oneline --topo-order --graph --decorate
    co = checkout
    stache = stash
    fixup = commit --amend -C HEAD
    ci = commit
    amend = commit --amend
    review = diff --staged
    save = commit -m'savepoint'
    lg = log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit
    rebase-master = rebase -i origin/master
[color]
    ui = auto
[core]
    whitespace = cr-at-eol
    filemode = true
	excludesfile = /Users/bprivat/.gitignore
[merge]
    conflictstyle = diff3
    renormalize = true
[push]
	default = simple
